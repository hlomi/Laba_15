//Обернений масив .Створіть програму, яка виводить елементи масиву в зворотньому
//порядку.
#include <iostream>

int main()
{
    setlocale(LC_ALL, "ukr");//локалізація
    const int size = 5;
    int mas[size];//оголошення змінних з цілими значеннями
    std::cout << "Введіть " << size << " значень в масиві\n";//звертання до юзера
    for (int c = 0; c < size; c++) {//цикл для звертання до кожного числа в масиві
        std::cin >> mas[c];
    }
    std::cout << "Масив у зворотньому напрямку:\n" << std::endl;
    for (int c = size - 1; c >= 0; c--) {//перевернути масив
        std::cout << mas[c] << "\n";//вивід відповіді
    }
    return 0;//повернути 0 - як кінець коду
}

