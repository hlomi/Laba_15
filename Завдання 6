//Пошук максимального і мінімального значення. Напишіть програму, яка
//знаходить максимальне і мінімальне значення в масиві.

#include <iostream>
#include <climits> //підключення відповідних бібліотек

int main()//оголошення меін для обчислення
{
    setlocale(LC_ALL, "ukr");//локалізація
    const int size = 5;//розмірність
    int mas[size];//оголошеня
    std::cout << "Введіть " << size << " значень масиву:\n";//ввеедення значень
    for (int c = 0; c < size; c++) {//до кожної ячейки в масиві
        std::cin >> mas[c];
    }

    int max_value = INT_MIN;//оголошення змінних з відповідними функціями
    int min_value = INT_MAX;//аналогічно, але під іншу функцію

    for (int c = 0; c < size; c++) {//застосувати до всього масиву
        if (mas[c] > max_value) {//перевірка умови - якщо число в значенні нацменше - вивести його, умова застосовується до всього масиву, через застосування циклу
            max_value = mas[c];
    }
        if (mas[c] < min_value) {//аналогічно але для найменшого значення, яке набувається в мастві
            min_value = mas[c];
        }
    }
    std::cout << "Максимальне значення:" << max_value << std::endl;//вивести макс значення
    std::cout << "Мінімальне значення:" << min_value << std::endl;//вивести мін значення
    return 1;//повернути 1 - як кінець коду
}
