// 3. Написати програму, яка обнуляє всі парні елементи масиву.
#include <iostream>

int main()//оголошення зміної меін
{
    setlocale(LC_ALL, "ukr");//локалізація
    int mus[10];
    int c;//оголошення змінних
    std::cout << "Введіть 10 значень масиву\n";
        for (c = 0; c < 10; c++) {//цикл для роботи з масивом
        std::cin >> mus[c]; //введення значень в масив і обробка чисел
    }
    
    for (c = 0; c < 10; c++) {//цикл для роботи з масивом
        if (mus[c] % 2 == 0) {
            mus[c] = 0; //проведення аналізу через ділення з остачею, якщо остача 0 - число парне і заміняємо значення в масиві на 0
        }
    }
    std::cout << "Відповідь:\n";
    for (c = 0; c < 10; c++) { //цикл для роботи з масивом
        std::cout << "M[" << c << "] = " << mus[c] << std::endl;//виведення відповіді
    }
    return 0;
}
